{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode-custom",
  "autoupdate": false,
  "permission": {
    "doom_loop": "deny",
    "skill": "deny"
  },
  "keybinds": {
    "leader": "ctrl+x",
    "input_newline": "shift+return",
    "session_parent": "ctrl+k"
  },
  "instructions": ["AGENTS.md"],
  "mcp": {
    "mcp__context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "mcp__aws-knowledge": {
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws"
    },
    "mcp__linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "headers": {
        "Authorization": "Bearer {env:LINEAR_API_KEY}"
      },
      "enabled": false
    },
    "mcp__atlassian": {
      "type": "local",
      "command": ["npx", "mcp-remote", "https://mcp.atlassian.com/v1/mcp"],
      "enabled": false
    },
    "mcp__playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": false
    }
  },
  "tools": {
    "mcp__*": false,
    "tool_*": false
  },
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    }
  },
  "agent": {
    "plan": {
      "disable": true
    },
    "build": {
      "disable": true
    },
    "general": {
      "disable": true
    },
    "explore": {
      "disable": true
    },
    "primary/plan": {
      "disable": false
    },
    "primary/build": {
      "disable": false
    }
  }
}
